@model Author
@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@Model.Name Details</h1>
@if (Model.BookAuthors != null && Model.BookAuthors.Any())
{
	<h3>Books</h3>
	<table class="table">
     <thead>
		 		 <tr>
			 <th>Book Title </th>
			 <th>Description</th>
			 <th>Price</th>
		 </tr
	 </thead>
	 <tbody>
		 @foreach (var book in Model.BookAuthors)
		 {
			 <tr>
				 <td>@book.Book.Title</td>
				 <td>@book.Book.Description</td>
				 <td>@book.Book.BuyPrice</td>
			 </tr>
		 }
	</table>
	
	<div>
		<a asp-action="Index">Back TO LIst</a>
	</div>
}