@{
    ViewData["Title"] = "About Us";
}

<section id="about" class="about section light-background">

    <!-- Section Title -->
    <div class="container section-title text-center" data-aos="fade-up">
        <h2>About Us</h2>
        <p>Discover who we are and what we do!</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4">
            <!-- Left Content -->
            <div class="col-lg-6 d-flex align-items-center">
                <img src="~/assets/img/6920933.jpg" class="img-fluid rounded" alt="About Us">
            </div>

            <!-- Right Content -->
            <div class="col-lg-6">
                <h3>Welcome to eBook Library Service</h3>
                <p>
                    At eBook Library Service, we are committed to providing the best online reading experience for book lovers.
                    Our library offers a wide selection of books in various categories to suit every taste. Whether you're a fan of fiction,
                    non-fiction, or educational materials, we have something for everyone.
                </p>
                <p>
                    Our mission is to make reading more accessible, enjoyable, and convenient for our users. With our easy-to-use platform,
                    you can browse, borrow, and purchase books anytime, anywhere.
                </p>

                <ul>
                    <li><i class="bi bi-check-circle"></i> Extensive collection of books</li>
                    <li><i class="bi bi-check-circle"></i> User-friendly interface</li>
                    <li><i class="bi bi-check-circle"></i> Affordable membership plans</li>
                    <li><i class="bi bi-check-circle"></i> Community-driven feedback and ratings</li>
                </ul>
            </div>
        </div>
    </div>

</section><!-- /About Section -->
